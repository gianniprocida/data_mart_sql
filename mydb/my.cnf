[mysqld]
# Set the character set for the server
character-set-server = utf8mb4

# Set the collation for the server
collation-server = utf8mb4_unicode_ci

# Set the default storage engine
default-storage-engine = InnoDB

# Set the maximum allowed packet size
max_allowed_packet = 256M

# Set the maximum connections allowed
max_connections = 100

# Enable query logging
general_log = 1
general_log_file = /var/log/mysql/mysql.log

# Set the slow query log parameters
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2

# Set the bind address to 0.0.0.0 to allow connections from any IP
bind-address = 0.0.0.0

